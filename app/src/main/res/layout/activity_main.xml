<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_centerInParent="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:text="Clear"
        android:id="@+id/clear"
        android:layout_marginStart="5dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:text="Delete"
        android:id="@+id/delete"
        android:layout_toEndOf="@+id/clear"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:text="Enter"
        android:id="@+id/enter"
        android:layout_toEndOf="@+id/delete"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="0"
        android:id="@+id/zero"
        android:layout_marginStart="5dp"
        android:layout_above="@+id/clear"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="("
        android:id="@+id/paren"
        android:layout_above="@+id/delete"
        android:layout_toEndOf="@id/zero"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=")"
        android:id="@+id/paren2"
        android:layout_above="@+id/enter"
        android:layout_toEndOf="@id/paren"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="+"
        android:id="@+id/plus"
        android:layout_above="@+id/enter"
        android:layout_toEndOf="@id/paren2"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="7"
        android:id="@+id/seven"
        android:layout_above="@+id/zero"
        android:layout_marginStart="5dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"
        android:id="@+id/eight"
        android:layout_above="@+id/paren"
        android:layout_toEndOf="@id/seven"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="9"
        android:id="@+id/nine"
        android:layout_above="@+id/paren2"
        android:layout_toEndOf="@id/eight"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="-"
        android:id="@+id/minus"
        android:layout_above="@+id/plus"
        android:layout_toEndOf="@id/nine"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:id="@+id/four"
        android:layout_above="@+id/seven"
        android:layout_marginStart="5dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"
        android:id="@+id/five"
        android:layout_above="@+id/eight"
        android:layout_toEndOf="@id/four"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"
        android:id="@+id/six"
        android:layout_above="@+id/nine"
        android:layout_toEndOf="@id/five"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="x"
        android:textAllCaps="false"
        android:id="@+id/multiply"
        android:layout_above="@+id/minus"
        android:layout_toEndOf="@id/six"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:id="@+id/one"
        android:layout_above="@+id/four"
        android:layout_marginStart="5dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:id="@+id/two"
        android:layout_above="@+id/five"
        android:layout_toEndOf="@id/one"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:id="@+id/three"
        android:layout_above="@+id/six"
        android:layout_toEndOf="@id/two"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="%"
        android:id="@+id/divide"
        android:layout_above="@+id/multiply"
        android:layout_toEndOf="@id/three"
        />



</RelativeLayout>